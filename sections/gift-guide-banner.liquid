{% comment %}
  Gift Guide Banner Section
  
  Features:
  - Fully customizable text from Theme Editor
  - Animated button with CSS keyframes
  - Responsive design for mobile/desktop
  - No external dependencies
{% endcomment %}

<section class="gift-guide-banner" 
         id="banner-{{ section.id }}" 
         data-section-id="{{ section.id }}">
  <div class="banner-wrapper">
    <div class="banner-container">
      <!-- Content Side -->
      <div class="banner-content">
        {% if section.settings.title != blank %}
          <h1 class="banner-title">{{ section.settings.title }}</h1>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
          <p class="banner-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <div class="banner-description">
            {{ section.settings.description }}
          </div>
        {% endif %}
        
        {% if section.settings.button_text != blank %}
          <button class="banner-cta-btn" 
                  data-animate="pulse"
                  onclick="document.querySelector('.gift-guide-grid').scrollIntoView({behavior: 'smooth'})">
            {{ section.settings.button_text }}
          </button>
        {% endif %}
      </div>
      
      <!-- Visual Side -->
      <div class="banner-visual">
        {% if section.settings.banner_image %}
          <div class="banner-image-container">
            <img src="{{ section.settings.banner_image | image_url: width: 600 }}" 
                 alt="{{ section.settings.banner_image.alt | default: section.settings.title }}"
                 loading="eager">
          </div>
        {% else %}
          <!-- Placeholder if no image -->
          <div class="banner-placeholder">
            <svg width="200" height="200" viewBox="0 0 200 200" fill="none">
              <rect width="200" height="200" fill="#f8f9fa" rx="20"/>
              <path d="M50 75h100v50H50z" fill="#e9ecef"/>
              <circle cx="70" cy="90" r="8" fill="#dee2e6"/>
              <path d="M130 110l-20-15-25 20-15-10" stroke="#dee2e6" stroke-width="2"/>
            </svg>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  /* Gift Guide Banner Styles */
  .gift-guide-banner {
    padding: 60px 20px;
    background: {{ section.settings.background_color | default: '#ffffff' }};
    min-height: 70vh;
    display: flex;
    align-items: center;
    position: relative;
  }
  
  .banner-wrapper {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .banner-container {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 80px;
    align-items: center;
  }
  
  /* Content Styles */
  .banner-content {
    padding: 20px 0;
  }
  
  .banner-title {
    font-size: 3.8rem;
    font-weight: 800;
    color: {{ section.settings.title_color | default: '#2c3e50' }};
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }
  
  .banner-subtitle {
    font-size: 1.4rem;
    color: {{ section.settings.subtitle_color | default: '#7f8c8d' }};
    line-height: 1.5;
    margin-bottom: 30px;
    font-weight: 400;
  }
  
  .banner-description {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 40px;
  }
  
  /* Animated CTA Button */
  .banner-cta-btn {
    background: {{ section.settings.button_bg | default: '#e74c3c' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    padding: 18px 45px;
    border: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.2px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    position: relative;
    overflow: hidden;
  }
  
  .banner-cta-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.6s;
  }
  
  .banner-cta-btn:hover::before {
    left: 100%;
  }
  
  .banner-cta-btn:hover {
    background: {{ section.settings.button_hover_bg | default: '#c0392b' }};
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
  }
  
  /* Button Animation */
  .banner-cta-btn[data-animate="pulse"] {
    animation: buttonPulse 2.5s infinite ease-in-out;
  }
  
  @keyframes buttonPulse {
    0%, 100% { 
      transform: scale(1); 
      box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    }
    50% { 
      transform: scale(1.05); 
      box-shadow: 0 8px 25px rgba(231, 76, 60, 0.5);
    }
  }
  
  /* Visual Styles */
  .banner-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .banner-image-container {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    transform: rotate(2deg);
    transition: transform 0.3s ease;
  }
  
  .banner-image-container:hover {
    transform: rotate(0deg) scale(1.02);
  }
  
  .banner-image-container img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .banner-placeholder {
    opacity: 0.5;
  }
  
  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .banner-container {
      grid-template-columns: 1fr;
      gap: 50px;
      text-align: center;
    }
    
    .banner-title {
      font-size: 3.2rem;
    }
  }
  
  @media (max-width: 768px) {
    .gift-guide-banner {
      padding: 40px 15px;
      min-height: 60vh;
    }
    
    .banner-title {
      font-size: 2.5rem;
    }
    
    .banner-subtitle {
      font-size: 1.2rem;
    }
    
    .banner-cta-btn {
      padding: 15px 35px;
      font-size: 1rem;
    }
    
    .banner-container {
      gap: 30px;
    }
  }
  
  @media (max-width: 480px) {
    .banner-title {
      font-size: 2rem;
    }
    
    .banner-subtitle {
      font-size: 1.1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Gift Guide Banner",
  "class": "gift-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Banner Title",
      "default": "The Ultimate Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Banner Subtitle", 
      "default": "Discover perfect gifts for every special person in your life"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Banner Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "EXPLORE GIFTS"
    },
    {
      "type": "header",
      "content": "Visual Settings"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#2c3e50"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color", 
      "default": "#7f8c8d"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#e74c3c"
    },
    {
      "type": "color",
      "id": "button_hover_bg",
      "label": "Button Hover Background",
      "default": "#c0392b"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
