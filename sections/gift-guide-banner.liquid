{% comment %}
  Gift Guide Banner Section - Pixel Perfect Implementation
  Based on provided HTML/CSS design
{% endcomment %}

<section class="gift-guide-banner-section" data-section-id="{{ section.id }}">
  <!-- Top Navigation Bar -->
  <div class="top-nav-bar">
    <div class="nav-content">
      <!-- Logo Area -->
      <div class="logo-container">
        {% if section.settings.logo_svg != blank %}
          {{ section.settings.logo_svg }}
        {% else %}
          <div class="default-logo">
            <svg width="151" height="19" viewBox="0 0 151 19" fill="none">
              <!-- Your SVG logo paths here -->
            </svg>
          </div>
        {% endif %}
      </div>
      
      <!-- Search Bar -->
      <div class="search-container">
        <div class="search-box">
          <input type="text" placeholder="{{ section.settings.search_placeholder | default: 'Search here...' }}" />
          <div class="search-line"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Banner Content -->
  <div class="banner-main-content">
    <div class="banner-wrapper">
      <!-- Left Content -->
      <div class="banner-text-content">
        {% if section.settings.main_title != blank %}
          <h1 class="banner-main-title">{{ section.settings.main_title }}</h1>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
          <p class="banner-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        
        {% if section.settings.button_text != blank %}
          <button class="banner-cta-button">
            <span>{{ section.settings.button_text }}</span>
            <div class="button-line"></div>
          </button>
        {% endif %}
      </div>

      <!-- Right Visual Content -->
      <div class="banner-visual-area">
        {% if section.settings.banner_image %}
          <div class="banner-image-frame">
            <img src="{{ section.settings.banner_image | image_url: width: 890 }}" 
                 alt="{{ section.settings.banner_image.alt | default: section.settings.main_title }}"
                 loading="eager">
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Bottom Navigation -->
  <div class="bottom-nav-bar">
    <div class="bottom-nav-content">
      <span class="bottom-nav-text">{{ section.settings.bottom_nav_text | default: 'Free shipping on orders over $100' }}</span>
    </div>
  </div>
</section>

<style>
/* Gift Guide Banner - Exact Match Styling */
.gift-guide-banner-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  min-height: 100vh;
  align-items: center;
}

/* Top Navigation Bar */
.top-nav-bar {
  width: 100%;
  display: flex;
  padding: 10px 50px;
  overflow: hidden;
  align-items: center;
  justify-content: center;
  background-color: #f4f4f4;
}

.nav-content {
  width: 100%;
  max-width: 1440px;
  display: flex;
  gap: 360px;
  align-items: center;
  justify-content: space-between;
}

.logo-container {
  width: 151px;
  height: 19px;
  display: flex;
  align-items: center;
}

.search-container {
  width: 207px;
  height: 44px;
  position: relative;
}

.search-box {
  width: 207px;
  height: 44px;
  position: relative;
  border: 1px solid transparent;
}

.search-box input {
  width: 100%;
  height: 100%;
  border: none;
  background: transparent;
  padding: 11.67px 41px;
  font-family: 'Jost', sans-serif;
  font-size: 16px;
  font-weight: 400;
  text-align: center;
  color: #000000;
  outline: none;
}

.search-box input::placeholder {
  color: #000000;
  opacity: 1;
}

.search-line {
  position: absolute;
  top: 21.55px;
  right: 22px;
  width: 24px;
  height: 1px;
  background-color: #000000;
}

.search-box::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  height: 44px;
  background-color: #000000;
}

/* Main Banner Content */
.banner-main-content {
  width: 100%;
  max-width: 1440px;
  height: 780px;
  position: relative;
  background-color: #ffffff;
}

.banner-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-text-content {
  position: absolute;
  left: 67px;
  top: 425px;
  z-index: 2;
}

.banner-main-title {
  color: #000000;
  font-size: 70px;
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  line-height: 100%;
  margin: 0 0 40px 0;
  max-width: 500px;
}

.banner-subtitle {
  color: #000000;
  width: 483px;
  font-size: 20px;
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  line-height: 139.99%;
  margin: 0 0 50px 0;
}

.banner-cta-button {
  width: 220px;
  height: 50px;
  position: relative;
  background-color: #000000;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.banner-cta-button span {
  color: #ffffff;
  font-size: 16px;
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  line-height: 20.48px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.banner-cta-button .button-line {
  position: absolute;
  top: 24.49px;
  right: 22px;
  width: 26px;
  height: 1px;
  background-color: #ffffff;
}

.banner-cta-button::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  height: 50px;
  background-color: #ffffff;
}

.banner-cta-button:hover {
  background-color: #333333;
  transform: translateY(-2px);
}

/* Banner Visual Area */
.banner-visual-area {
  position: absolute;
  top: 0;
  right: 0;
  width: 890px;
  height: 780px;
}

.banner-image-frame {
  position: absolute;
  top: 378px;
  left: 0;
  width: 890px;
  height: 402px;
}

.banner-image-frame img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Bottom Navigation */
.bottom-nav-bar {
  width: 100%;
  display: flex;
  padding: 10px 50px;
  overflow: hidden;
  align-items: center;
  justify-content: center;
  background-color: #f4f4f4;
  margin-top: 90px;
}

.bottom-nav-content {
  width: 100%;
  max-width: 1440px;
  display: flex;
  gap: 375px;
  align-items: center;
  justify-content: center;
}

.bottom-nav-text {
  color: #000000;
  font-size: 16px;
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  line-height: 13.42px;
  text-align: center;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .nav-content {
    gap: 50px;
    flex-direction: column;
    padding: 20px 0;
  }
  
  .search-container {
    width: 100%;
    max-width: 300px;
  }
  
  .search-box {
    width: 100%;
  }
  
  .banner-main-content {
    height: auto;
    padding: 40px 20px;
  }
  
  .banner-text-content {
    position: relative;
    left: auto;
    top: auto;
    text-align: center;
    margin-bottom: 40px;
  }
  
  .banner-main-title {
    font-size: 45px;
    max-width: 100%;
  }
  
  .banner-subtitle {
    width: 100%;
    font-size: 18px;
  }
  
  .banner-visual-area {
    position: relative;
    width: 100%;
    height: 400px;
    top: auto;
    right: auto;
  }
  
  .banner-image-frame {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 300px;
  }
  
  .bottom-nav-content {
    gap: 0;
  }
  
  .bottom-nav-text {
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .banner-main-title {
    font-size: 35px;
  }
  
  .banner-subtitle {
    font-size: 16px;
  }
  
  .banner-cta-button {
    width: 180px;
    height: 45px;
  }
  
  .nav-content,
  .bottom-nav-content {
    padding: 0 15px;
  }
}
</style>

{% schema %}
{
  "name": "Gift Guide Banner",
  "class": "gift-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "Navigation Settings"
    },
    {
      "type": "html",
      "id": "logo_svg",
      "label": "Logo SVG Code"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder",
      "default": "Search here..."
    },
    {
      "type": "header",
      "content": "Banner Content"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find the ideal gift for your loved ones from our curated collection of premium products."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background Image"
    },
    {
      "type": "header",
      "content": "Bottom Navigation"
    },
    {
      "type": "text",
      "id": "bottom_nav_text",
      "label": "Bottom Navigation Text",
      "default": "Free shipping on orders over $100"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
